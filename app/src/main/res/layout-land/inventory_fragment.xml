<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/wooden_hanging_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142">


        <ImageButton
            android:id="@+id/cell_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/inventory_button" />

        <ImageButton
            android:id="@+id/cell_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/cell_1"
            android:background="@drawable/inventory_button" />

        <ImageButton
            android:id="@+id/cell_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/cell_2"
            android:background="@drawable/inventory_button" />

        <ImageButton
            android:id="@+id/cell_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/cell_3"
            android:background="@drawable/inventory_button" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
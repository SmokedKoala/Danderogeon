<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/forest_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="159dp"
            android:layout_height="116dp"

            android:id="@+id/wooden_board_1"
            android:background="@drawable/wooden_hanging_board"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027" app:layout_constraintVertical_bias="0.0"/>


    <ImageButton
            android:id="@+id/hero_pos_4"
            android:layout_width="120dp"
            android:background="@drawable/hero"
            android:layout_height="129dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintVertical_bias="0.879"/>
    <Button
            android:id="@+id/treasure_pos"
            android:layout_width="121dp"
            android:layout_height="115dp"
            android:background="@drawable/chest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.59"
            app:layout_constraintVertical_bias="0.885"/>
    <Button
            android:id="@+id/inventory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inventory_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintVertical_bias="0.124"/>
    <Button
            android:id="@+id/attackChoiceButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/weapon_inventory_fight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintVertical_bias="0.124"/>
    <ImageButton
            android:id="@+id/next_room"
            android:soundEffectsEnabled="false"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintVertical_bias="0.475"/>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:text=""
        android:layout_width="197dp"
        android:layout_height="277dp"
        android:layout_marginStart="500dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:layout_height="277dp"
        android:layout_marginStart="263dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/hero_type_item_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="264dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/weapon_inventory_fight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hero_type_item_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="332dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/armor_inventory_fight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hero_type_item_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="400dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/inventory_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hero_type_item_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="572dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/potion_inventory_fight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
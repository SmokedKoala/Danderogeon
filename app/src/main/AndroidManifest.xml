            </intent-filter>
        </activity>

        <activity
            android:name=".VendorActivity"
            android:label="@string/title_activity_vendor"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".EndOfJorneyActivity"
                android:screenOrientation="landscape"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FightActivity"
            android:label="@string/title_fight_area"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrepareActivity"
            android:label="@string/title_activity_prepare"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
